<div class="container landingPage">
	<%= simple_form_for(@loan_application, url: wizard_path, method: :put) do |f| %>
	  <div class="row">
			<div class="col-md-6 col-md-offset-3">
	  		<div class="panel panel-default">
	  			<div class="panel-body">
			  		<div class="form-group col-md-12">
			  			<i class="fa fa-check-circle secondary" aria-hidden="true"></i>
			  			<i class="fa fa-check-circle secondary" aria-hidden="true"></i>
			  			<i class="fa fa-circle primary" aria-hidden="true"></i>
			  			<i class="fa fa-circle-o primary" aria-hidden="true"></i>
			  		</div>
						<h3 class="center formHeader">Employer Information</h3>
						<hr>
			      <%= f.input :EmployerName, label: 'Employer Name', placeholder: "Employer Name", error: "Sorry, this field can't be blank", wrapper_html: { class: 'col-md-6' } %>
			      <%= f.input :WorkPhone, label: "Work Phone", placeholder: "Work Phone", error: "Please input a proper phone code", wrapper_html: { class: 'col-md-6' } %>
			      <%= f.input :PayDay1, label: "Upcoming Pay Date",placeholder: "Upcoming Pay date", error: "Sorry, this field can't be blank", wrapper_html: { class: 'col-md-6' } %>
			      <%= f.input :PayDay2, label: "Next Upcoming Pay Date", placeholder: "Next Upcoming Pay date", error: "Sorry, this field can't be blank", wrapper_html: { class: 'col-md-6' } %>
			      <%= f.input :PayFrequency, collection: Loan.PayFrequencies.keys.to_a, selected: Loan.PayFrequencies.first, label: "Pay Frequency", placeholder: "Pay Frequency", wrapper_html: { class: 'col-md-4' } %>
			      <%= f.input :MonthlyIncome, label: "Monthly Income", placeholder: "Monthly Income", error: "Sorry, this field can't be blank", wrapper_html: { class: 'col-md-4' } %>
			      <%= f.input :IncomeType, collection: Loan.IncomeTypes.keys.to_a, selected: Loan.IncomeTypes.first, label: "Income Type", placeholder: "Income Type", wrapper_html: { class: 'col-md-4' } %>
			      <div class="form-group col-md-12">
			      	<%= f.submit "Next Step", class: "btn btn-primary" %>
			      </div>
			      <div class="form-group col-md-12 center">
					    <i class="fa fa-lock fa-1x" aria-hidden="true"></i>
					  </div>
			    </div>
	    	</div>
	    </div>
	  </div>
	<% end %>
</div>
