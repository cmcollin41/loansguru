<div class="container landingPage">
	<%= simple_form_for(@loan_application, url: wizard_path, method: :put) do |f| %>
	  <div class="row">
	  	<div class="col-md-6 col-md-offset-3">
	  		<div class="panel panel-default">
	  			<div class="panel-body">
			  		<div class="form-group col-md-12">
			  			<i class="fa fa-circle primary" aria-hidden="true"></i>
			  			<i class="fa fa-circle-o primary" aria-hidden="true"></i>
			  			<i class="fa fa-circle-o primary" aria-hidden="true"></i>
			  			<i class="fa fa-circle-o primary" aria-hidden="true"></i>
			  		</div>
						<h3 class="center formHeader">Let's Get Started</h3>
						<hr>
					
			      <%= f.input :RequestedAmount, label: 'Amount Needed', placeholder: "Amount Needed", error: "Please select an amount between $1-5000", wrapper_html: { class: 'col-md-6' } %>
			      <%= f.input :Zip, label: "Zip Code", placeholder: "Zip Code", error: "Please input a proper zip code", wrapper_html: { class: 'col-md-6' } %>
			      <%= f.input :FirstName, label: "First Name", placeholder: "First Name", error: "Sorry, this field can't be blank", wrapper_html: { class: 'col-md-6' } %>
			      <%= f.input :LastName, label: "Last Name",placeholder: "Last Name", error: "Sorry, this field can't be blank", wrapper_html: { class: 'col-md-6' } %>
			      <%= f.input :Email, label: "Email", placeholder: "Email", error: "Please input a proper email address", wrapper_html: { class: 'col-md-12' } %>
			      <div class="form-group col-md-12">
			      	<%= f.submit "Next Step", class: "btn btn-primary" %>
			      </div>
			      <div class="form-group col-md-12 center">
			      	<i class="fa fa-lock fa-1x" aria-hidden="true"></i>
			      </div>
	    		</div>
	    	</div>
	    </div>
	  </div>
	<% end %>
</div>